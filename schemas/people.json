{
    "$schema": "http://json-schema.org/schema#",
    "id": "uri://registries/people#person",
    "table": "people",
    "title": "person",
    "_security": {
        "_create": {
            "_static": [
                "Registry - write"
            ]
        },
        "_read": {
            "_static": [
                "Registry - read"
            ]
        },
        "_modify": {
            "_static": [
                "Registry - write"
            ]
        }
    },
    "listFields": [
        {
            "field": "baseData.surName",
            "title": "Priezvisko",
			"transCode":"schema.people.listFields.surName"
        },
        {
            "field": "baseData.name",
            "title": "Meno",
			"transCode":"schema.people.listFields.name"
        },
        {
            "field": "baseData.id",
            "title": "Registračné číslo",
			"transCode":"schema.people.listFields.id"
        }
    ],
    "properties": {
        "systemCredentials": {
            "$ref": "uri://registries/security#systemCredentials"
        },
        "baseData": {
            "title": "Základné údaje",
            "transCode": "schema.people.baseData",
            "type": "object",
            "properties": {
                "bornNumber": {
                    "title": "Rodné číslo",
                    "transCode": "schema.people.baseData.bornNumber",
                    "type": "string",
                    "required": true
                },
                "name": {
                    "title": "Meno",
                    "transCode": "schema.people.baseData.name",
                    "type": "string",
                    "required": true
                },
                "surName": {
                    "title": "Priezvisko",
                    "transCode": "schema.people.baseData.surName",
                    "type": "string",
                    "required": true
                },
                "bornName": {
                    "title": "Rodné priezvisko",
                    "transCode": "schema.people.baseData.bornName",
                    "type": "string",
                    "required": false
                },
                "title": {
                    "title": "Titul",
					"transCode": "schema.people.baseData.title",
                    "type": "string",
                    "required": false
                },
                "birthDate": {
                    "title": "Dátum narodenia",
					"transCode": "schema.people.baseData.birthDate",
                    "type": "date",
                    "required": true,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "gender": {
                    "title": "Pohlavie",
					"transCode": "schema.people.baseData.gender",
                    "type": " string",
                    "enum": [
                        "Muž",
                        "Žena"
                    ],
                    "required": true
                },
                "nationality": {
                    "title": "Štatna prislusnosť",
					"transCode": "schema.people.baseData.nationality",
                    "type": "string",
                    "required": true
                }
            }
        },
        "photoInfo": {
            "title": "Fotografie",
			"transCode":"schema.people.photoInfo",
            "type": "object",
            "properties": {
                "photo": {
                    "title": "Fotografia",
					"transCode":"schema.people.photoInfo.photo",
                    "type": "string",
                    "required": true,
                    "render": {
                        "component": "psui-uploadable-image",
                        "height": 244,
                        "width": 205
                    }
                }
            }
        },
        "contactInfo": {
            "title": "Kontaktné údaje",
			"transCode":"schema.people.contactInfo",
            "type": "object",
            "properties": {
                "street": {
                    "title": "Ulica",
					"transCode":"schema.people.contactInfo.street",
                    "type": "string",
                    "required": true
                },
                "houseNumber": {
                    "title": "Číslo domu",
					"transCode":"schema.people.contactInfo.houseNumber",
                    "type": "string",
                    "required": true
                },
                "city": {
                    "title": "Obec",
					"transCode":"schema.people.contactInfo.city",
                    "type": "string",
                    "required": true
                },
                "zipCode": {
                    "title": "PSČ",
					"transCode":"schema.people.contactInfo.zipCode",
                    "type": "string",
                    "required": true
                },
                "country": {
                    "title": "Štát",
					"transCode":"schema.people.contactInfo.country",
                    "type": "string",
                    "required": true
                },
                "phoneNumber": {
                    "title": "Telefón",
					"transCode":"schema.people.contactInfo.phoneNumber",
                    "type": "string",
                    "required": false
                },
                "mobileNumber": {
                    "title": "Mobil",
					"transCode":"schema.people.contactInfo.mobileNumber",
                    "type": "string",
                    "required": false
                },
                "email": {
                    "title": "E-mail",
					"transCode":"schema.people.contactInfo.email",
                    "type": "string",
                    "required": false
                }
            }
        },
        "bankInfo": {
            "title": "Bankové spojenie",
			"transCode":"schema.people.bankInfo",
            "type": "object",
            "properties": {
                "bankAccount": {
                    "title": "Číslo účtu",
					"transCode":"schema.people.bankInfo.bankAccount",
                    "type": "string",
                    "required": false
                },
                "bankCode": {
                    "title": "Kód banky",
					"transCode":"schema.people.bankInfo.bankCode",
                    "type": "string",
                    "required": false
                },
                "iban": {
                    "title": "IBAN",
					"transCode":"schema.people.bankInfo.iban",
                    "type": "string",
                    "required": false
                },
                "swift": {
                    "title": "SWIFT",
					"transCode":"schema.people.bankInfo.swift",
                    "type": "string",
                    "required": false
                }
            }
        },
        "hockeyPlayerInfo": {
            "title": "Profil hráča",
			"transCode":"schema.people.hockeyPlayerInfo",
            "type": "object",
            "properties": {
                "clubName": {
                    "title": "Názov klubu",
					"transCode":"schema.people.hockeyPlayerInfo.clubName",
                    "required": false,
                    "$objectLink": {
                        "registry": "organizations",
                        "name": "baseData.name"
                    }
                },
                "positionName": {
                    "title": "Post",
					"transCode":"schema.people.hockeyPlayerInfo.positionName",
                    "type": "string",
                    "required": false
                },
                "dressNumber": {
                    "title": "Číslo dresu",
					"transCode":"schema.people.hockeyPlayerInfo.dressNumber",
                    "type": "string",
                    "required": false
                },
                "playerHeight": {
                    "title": "Výška",
					"transCode":"schema.people.hockeyPlayerInfo.playerHeight",
                    "type": "string",
                    "required": false
                },
                "playerWeight": {
                    "title": "Hmotnosť",
					"transCode":"schema.people.hockeyPlayerInfo.playerWeight",
                    "type": "string",
                    "required": false
                },
                "stickHandling": {
                    "title": "Držanie hokejky",
					"transCode":"schema.people.hockeyPlayerInfo.stickHandling",
                    "type": "string",
                    "required": false
                },
                "contractDate": {
                    "title": "Zmluva zo dňa",
					"transCode":"schema.people.hockeyPlayerInfo.contractDate",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                }
            }
        },
        "unionMemberEmployerInfo": {
            "title": "Údaje zamestnávateľa",
            "type": "object",
            "properties": {
                "employeeNumber": {
                    "title": "Osobné číslo",
                    "type": "string",
                    "required": false
                },
                "employedFrom": {
                    "title": "V zamestnaní od",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "employer": {
                    "title": "Zamestnávateľ",
                    "required": false,
                    "$objectLink": {
                        "registry": "organizations",
                        "name": "baseData.name"
                    }
                },
                "departmentName": {
                    "title": "Pracovisko",
                    "type": "string",
                    "required": false
                },
                "occupationName": {
                    "title": "Pracovné zaradenie",
                    "type": "string",
                    "required": false
                }
            }
        },
        "unionMemberUnionsInfo": {
            "title": "Údaje Odborov",
            "type": "object",
            "properties": {
                "primaryOrganizationMembershipFrom": {
                    "title": "Evidov.v ZO od",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "unionMembershipFrom": {
                    "title": "V odboroch od",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "primaryOrganizationName": {
                    "title": "Základná organizácia",
                    "required": true,
                    "$objectLink": {
                        "registry": "organizations",
                        "name": "baseData.name"
                    }
                },
                "unionDepartmentName": {
                    "title": "Výbor",
                    "type": "string",
                    "required": false
                }
            }
        },
        "otherInfo": {
            "title": "Ostatné údaje",
			"transCode":"schema.people.otherInfo",
            "type": "object",
            "properties": {
                "isPhotoPublic": {
                    "title": "Je fotka verejná",
					"transCode":"schema.people.otherInfo.isPhotoPublic",
                    "type": "boolean",
                    "required": false
                },
                "idCardNumber": {
                    "title": "Číslo OP",
					"transCode":"schema.people.otherInfo.idCardNumber",
                    "type": "string",
                    "required": false
                },
                "membershipStartDate": {
                    "title": "Člen od",
					"transCode":"schema.people.otherInfo.membershipStartDate",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "membershipEndDate": {
                    "title": "Člen do",
					"transCode":"schema.people.otherInfo.membershipEndDate",
                    "type": "string",
                    "required": false,
                    "render": {
                        "component": "psui-datepicker"
                    }
                },
                "note": {
                    "title": "Poznámka",
					"transCode":"schema.people.otherInfo.note",
                    "type": "string",
                    "required": false,
                    "large": true
                }
            }
        }
    }
}